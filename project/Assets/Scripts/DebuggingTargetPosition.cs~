using UnityEngine;
using System.Collections;

public class DebuggingTargetPosition : MonoBehaviour {
	public Player player;

	// Use this for initialization
	void Start () {
	}
	
	// Update is called once per frame
	void Update () {
		Vector2 target = player.directionToGo;
		this.guiText.text = "target = (" + target.x + ", " + target.y + ")";
	}
}
