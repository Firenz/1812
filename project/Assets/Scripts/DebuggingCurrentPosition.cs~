using UnityEngine;
using System.Collections;

public class DebuggingCurrentPosition : MonoBehaviour {
	public Player player;

	// Use this for initialization
	void Start () {
	
	}
	
	// Update is called once per frame
	void Update () {
		Vector2 currentPosition = player.currentPosition;
		this.guiText.text = "currentPosition = (" + currentPosition.x + ", " + currentPosition.y + ")";
	}
}
