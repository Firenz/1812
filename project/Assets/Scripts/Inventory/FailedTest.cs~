using UnityEngine;
using System.Collections;
using System.Collections.Generic;

public class FailedTest : ItemInventory {

	protected override void InitializeInformation(){
		descriptionText.Add("Es un examen");
		nameOfInteractiveObjectsWhichItemInteracts.Add("Window");
		List<string> _dialogueText = new List<string>();
		_dialogueText.Add("Ya me gustaria");
		_dialogueText.Add("poder tirarlo por");
		_dialogueText.Add("la ventana pero");
		_dialogueText.Add("entonces si que");
		_dialogueText.Add("no aprobaria nunca");
		beforeUsedText.Add("Window", _dialogueText);
	}

	private void OnEnable(){
		Window.interactionWithFailedTest += UpdateData;
	}

	private void OnDisable(){
		Window.interactionWithFailedTest -= UpdateData;
	}

	protected void UpdateData(bool isWindowsClosed){
		if(!isWindowsClosed){
			List<string> _dialogueText = new List<string>();
			_dialogueText.Add("...");
			_dialogueText.Add("Se me ha");
			_dialogueText.Add("ido volando el");
			_dialogueText.Add("examen");
			_dialogueText.Add("Mierda...");
			afterUsedText.Add("Window", _dialogueText);
			isItemDestroyedAfterBeingUsed = true;
		}
	}

}
