using UnityEngine;
using System.Collections;

public class DebuggingMoveDirection : MonoBehaviour {
	public Player player;
	
	// Use this for initialization
	void Start () {
		
	}
	
	// Update is called once per frame
	void Update () {
		Vector2 moveDirection = player.moveDirection;
		this.guiText.text = "moveDirection = (" + moveDirection.x + ", " + moveDirection.y + ")";
	}
}

