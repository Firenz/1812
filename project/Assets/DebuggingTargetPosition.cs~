using UnityEngine;
using System.Collections;

public class DebuggingTargetPosition : MonoBehaviour {
	public PlayerMovementController playerMovementControllerScript;

	// Use this for initialization
	void Start () {
	}
	
	// Update is called once per frame
	void Update () {
		Vector3 target = playerMovementControllerScript.target;
		this.guiText.text = "target = (" + target.x + ", " + target.y + ", " + target.z + ")";
	}
}
